[flake8]
max-line-length = 88
exclude =
    .git,
    __pycache__,
    migrations,
    .venv,
    venv,
    build,
    dist,
    .tox,
    .eggs,
    *.egg-info,
    .cache
extend-ignore =
    E203,  # whitespace before ':' (conflicts with black)
    W503,  # line break before binary operator (conflicts with black)
per-file-ignores =
    __init__.py:F401
max-complexity = 10
